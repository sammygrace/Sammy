<p id="notice"><%= notice %></p>

<section class="banner">
<hr>
<h1>Vendors</h1>
</section>

<form method: "get">
  <input type="text" style="margin: 10px 0px" name=find> 
  <button>Search</button>
</form>

<section class="content">
  <h2 style="color:green;">There are <%= @vendors.count %> vendors.</h2>

<table>
  <thead>
    <tr>
      <th>Name</th> 
      <th>Address</th>
      <th>Description</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vendors.each do |vendor| %>
      <tr>
        <td><%= link_to vendor.name, vendor %></td>
        <td><%= highlight(vendor.address, params[:find]) %></td>
        <td><%= vendor.description %></td>
        <td><%= highlight(vendor.content, params[:find]) %></td>
        <td><%= link_to 'Edit', edit_vendor_path(vendor) %></td>
        <td><%= link_to 'Destroy', vendor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</section>

<br>

<%= link_to 'New Vendor', new_vendor_path %>
